{
  "name": "Simple Facebook Customizer",
  "description": "Customize Facebook with a set of predefined settings",
  "manifest_version": 3,
  "version": "0.1.2",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "templates/popup.html",
    "default_title": "Simple Facebook Customizer",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "run_at": "document_start",
      "js": [
        "scripts/config.js",
        "scripts/content.js"
      ]
    }
  ]
}
